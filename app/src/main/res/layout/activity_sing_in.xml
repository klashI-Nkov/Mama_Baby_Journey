<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    style="@style/screen_Background"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Sing_in">


  <!--Email Edit Text-->
  <EditText
      android:id="@+id/editTextTextPersonName"
      style="@style/EditTextStyle"
      android:layout_width="match_parent"

      android:layout_height="50dp"
      android:layout_marginStart="30dp"
      android:layout_marginEnd="30dp"
      android:drawableStart="@drawable/email"


      android:ems="10"
      android:hint="البريد الإلكتروني"

      android:inputType="textEmailAddress"
      android:paddingStart="20dp"

      android:textAlignment="center"
      android:textSize="20sp"
      android:theme="@style/EditTextStyle"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.258"
      tools:ignore="Autofill,HardcodedText,RtlSymmetry,VisualLintTextFieldSize" />

  <!--Password Edit Text-->
  <EditText
      android:id="@+id/editTextTextPersonName2"
      style="@style/EditTextStyle"
      android:layout_width="match_parent"

      android:layout_height="50dp"
      android:layout_marginStart="30dp"

      android:layout_marginEnd="30dp"
      android:drawableStart="@drawable/lock"

      android:drawablePadding="85dp"
      android:ems="10"

      android:hint="كلمة المرور"
      android:inputType="textPassword"

      android:paddingStart="20dp"
      android:textAlignment="viewStart"
      android:textSize="20sp"
      android:theme="@style/EditTextStyle"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.37"
      tools:ignore="Autofill,HardcodedText,RtlSymmetry,VisualLintTextFieldSize" />


  <!--Sing In Button-->
  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/button"
      style="@style/ButtonStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"


      android:layout_marginStart="30dp"
      android:layout_marginEnd="30dp"
      android:text="تسجيل الدخول"

      android:textSize="20sp"
      android:theme="@style/ButtonStyle"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="HardcodedText,VisualLintButtonSize" />

  <TextView
      android:id="@+id/textView"
      style="@style/TextViewStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:clickable="true"
      android:focusable="true"
      android:fontFamily="@font/pacifico"
      android:text="Mama  Baby Journey"
      android:textAlignment="center"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.05"
      tools:ignore="HardcodedText" />

  <TextView
      android:id="@+id/textView5"
      style="@style/TextViewStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:clickable="true"

      android:focusable="true"
      android:text="هل نسيت كلمة السر"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.611"
      tools:ignore="HardcodedText,TouchTargetSizeCheck" />

  <TextView
      android:id="@+id/textView3"
      style="@style/TextViewStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="مستخدم جديد"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.711"
      tools:ignore="HardcodedText" />

  <TextView
      android:id="@+id/textView4"
      style="@style/TextViewStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="تسجيل الدخول باستخدام"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.788"
      tools:ignore="HardcodedText" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:clickable="true"
      android:focusable="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.684"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.901"
      app:srcCompat="@drawable/google_icon"
      tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:clickable="true"
      android:focusable="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.313"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.901"
      app:srcCompat="@drawable/facebook_icon"
      tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>