<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con"
    style="@style/screen_Background"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".Sing_in">

    <TextView
        android:id="@+id/textView1"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico"
        android:text="Mama Baby Journey"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        tools:ignore="HardcodedText" />

    <!--Email Edit Text-->

    <TextView
        android:id="@+id/Email_Float_Hint"
        style="@style/Float_Hint_Background_Color"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:clickable="true"
        android:focusable="true"

        android:text="البريد الإلكتروني"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/Email_Edit_text"
        style="@style/EditTextStyle"
        android:theme="@style/EditTextStyle"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"

        android:paddingStart="13dp"
        android:paddingEnd="13dp"

        android:drawableEnd="@drawable/icons_email_icon"

        android:hint="البريد الالكتروني"

        android:inputType="textEmailAddress"

        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24"
        tools:ignore="Autofill,HardcodedText" />

    <!--Password Edit Text-->

    <EditText

        android:id="@+id/password_edit_text"

        style="@style/EditTextStyle"
        android:theme="@style/EditTextStyle"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:drawableEnd="@drawable/icons_lock_icon"

        android:hint="كلمة المرور"
        android:inputType="textPassword"

        android:paddingStart="13dp"
        android:paddingEnd="13dp"

        android:textAlignment="textEnd"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="Autofill,HardcodedText" />

    <TextView
        android:id="@+id/textView5"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="35dp"
        android:clickable="true"
        android:focusable="true"
        android:text="نسيت كلمة السر ؟"

        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.481"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

    <!--Sing In Button-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sing_Up_BTN"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"

        android:layout_marginEnd="50dp"
        android:text="تسجيل الدخول"

        android:textSize="20sp"
        android:theme="@style/EditTextStyle"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.642"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView4"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" او باستخدام"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.788"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView4"
        style="@style/Icon_BG"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:padding="10dp"
        android:theme="@style/Icon_BG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907"
        app:srcCompat="@drawable/icons_facebook_icon"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView5"
        style="@style/Icon_BG"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:padding="10dp"
        android:theme="@style/Icon_BG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907"
        app:srcCompat="@drawable/icons_google_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        style="@style/Float_Hint_Background_Color"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="البريد الإلكتروني"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217"
        tools:ignore="Autofill,HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>