<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MamaBabyJourney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FF5722</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="screen_Background" >
        <item name="android:background">#d7c9bc</item>
    </style>



    <style name="EditTextStyle" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#7B7B7B</item>
        <item name="android:background">@drawable/shapes_edit_text_shape</item>
        <item name="Edit_Text_background">@color/background_color</item>
        <item name="Icons_Colors">@color/white</item>
    </style>

    <style name="TextViewStyle"  >
        <item name="android:textColor">#7B7B7B</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="arrow_style">
        <item name="srcCompat">@drawable/arrow_light</item>
    </style>
</resources>

