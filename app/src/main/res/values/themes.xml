<resources >

    <style name="Theme.MamaBabyJourney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FF5722</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">#73000000</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">#73000000</item>
        <item name="android:textColorHint">#73000000</item>
        <item name="android:background">@drawable/shapes_edit_text_shape</item>
        <item name="BG">#0A000000</item>
        <item name="Icons_Colors">#73000000</item>
        <item name="stroke_color">@color/white</item>
    </style>

    <style name="EditTextStyle2">
        <item name="android:textColor">#73000000</item>
        <item name="android:textColorHint">#73000000</item>
        <item name="android:background">@drawable/shapes_edit_text_shape</item>
        <item name="BG">#09FFFFFF</item>
        <item name="Icons_Colors">#73000000</item>
        <item name="stroke_color">#140E0E0E</item>
    </style>

    <style name="screen_Background">
        <item name="android:background">@drawable/info_page_bg</item>
        <item name="Start_Color">#9C1955</item>
        <item name="Center_Color">#F1F1F1</item>
        <item name="End_Color">#B603A9F4</item>
    </style>

    <style name="Icon_BG">
        <item name="android:background">@drawable/icons_bg_shape</item>
        <item name="BG">#18000000</item>
        <item name="Icons_Colors">@color/white</item>
        <item name="stroke_color">@color/white</item>
    </style>

    <style name="Scroll_Style">
        <item name="android:background">@drawable/shapes_scroll_shape</item>
        <item name="BG">#0D0E0E0E</item>
        <item name="stroke_color">#140E0E0E</item>
    </style>

    <style name="No_Name_Style">
        <item name="stroke_color">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>

