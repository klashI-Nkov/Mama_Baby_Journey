<resources>

    <style name="Theme.MamaBabyJourney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">#67FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/shapes_edit_text_shape</item>
        <item name="Edit_Text_background">#1EFFFFFF</item>
        <item name="Icons_Colors">@color/white</item>
        <item name="stroke_color">@color/white</item>
    </style>

    <style name="screen_Background">
        <item name="android:background">#333333</item>
    </style>

    <style name="Float_Hint_Background_Color">

        <item name="android:background">#333333</item>

    </style>

    <style name="Icon_BG">
        <item name="android:background">@drawable/icons_bg_shape</item>
        <item name="Edit_Text_background">#1EFFFFFF</item>
        <item name="stroke_color">@color/white</item>
    </style>

</resources>

